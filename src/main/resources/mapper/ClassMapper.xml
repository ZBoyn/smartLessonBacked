<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neu.smartLesson.mapper.ClassMapper">

    <insert id="insertClass" parameterType="com.neu.smartLesson.model.CourseClass"
            useGeneratedKeys="true" keyProperty="classId">
        INSERT INTO Classes
        (course_id, class_name, teacher_id, semester)
        VALUES
        (#{courseId}, #{className}, #{teacherId}, #{semester})
    </insert>

    <select id="findClassesByCourseId" parameterType="int"
            resultType="com.neu.smartLesson.model.CourseClass">
        SELECT
        class_id,
        course_id,
        class_name,
        teacher_id,
        semester
        FROM
        Classes
        WHERE
        course_id = #{courseId}
        ORDER BY
        semester DESC, class_name;
    </select>

    <select id="findClassById" parameterType="int"
            resultType="com.neu.smartLesson.model.CourseClass">
        SELECT * FROM Classes WHERE class_id = #{classId}
    </select>

</mapper>