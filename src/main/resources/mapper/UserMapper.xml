<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.neu.smartLesson.mapper.UserMapper">

    <select id="findByUsername" parameterType="string" resultType="com.neu.smartLesson.model.User">
        SELECT
            user_id,
            username,
            password_hash,
            full_name,
            email,
            UPPER(role) as role,
            created_at
        FROM
            Users
        WHERE
            username = #{username}
    </select>

</mapper>